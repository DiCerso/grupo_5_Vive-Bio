<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head', { title : "Home" }) %>

    <body class="home">
        <%- include('./partials/header') %>

            <!-- Inicio de carrusel -->
            <div class="slider">
                <ul>
                    <li><img src="/images/carousel_img_1.webp" alt=""></li>
                    <li><img src="/images/carousel_img_2.jpg" alt=""></li>
                    <li><img src="/images/carousel_img_3.jpg" alt=""></li>
                    <li><img src="/images/carousel_img_4.webp" alt=""></li>
                </ul>
            </div>

            <!-- fin de carrusel -->
            <main>
                <div class="subtitulo__home">
                    <h1>Productos en Oferta</h1>
                </div>
                <section class="sect1">
                    <% products.forEach(product=> { %>
                            <article class="art__home">
                                <div class="nombreart__home">
                                    <h1>
                                        <%= product.name %>
                                    </h1>
                                </div>
                                <div class="imgart__home">
                                    <img src="/images/<%= product.productImages[0].name %>" alt="">
                                </div>
                                <div class="precio">
                                    <h4>
                                        <%= product.price %> $
                                    </h4>
                                    <p>
                                        <%= product.price - (product.price * product.discount / 100) %> $
                                    </p>
                                </div>
                                <div class="verart__home">
                                    <a href="/products/Card/<%= product.id %>">Ver mas</a>
                                </div>
                            </article>
                                <% }) %>
                </section>
                <div class='nombre-categorias__home'>
                    <h1>Categorias</h1>
                </div>
                <section class="sect2">
                    <% category.forEach(cate=> { %>
                        <article class="categorias__home">
                            <a href="/Products/All#<%= cate.name %>">
                                <div class="<%= cate.name %>__home" id="cate"></div>
                                <div class="barra__cate__home">
                                    <p>
                                        <%= cate.name %>
                                    </p>
                                </div>
                            </a>
                        </article>
                        <% }) %>
                </section>
            </main>
            <%- include('./partials/footer') %>
                <script type="text/javascript" src="/javascript/carrusel.js"></script>
                <script src="/javascript/menuMobile.js"></script>
    </body>

</html>