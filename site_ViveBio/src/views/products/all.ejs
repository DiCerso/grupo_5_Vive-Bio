      <main>
        <section class="primer_contenedor">
          <div class="container">
            <h2 class="titulares" id="bioCapilar">BioCapilar</h2>
            <div class="overlay">
              <img style="width:100%" src="/images/category/banner-capilar.jpg" alt="">
            </div>
            <div class="box">
              <div class="content">
                <p id="capilar">
                  La naturaleza nos regala su frescura, fuerza, y vitalidad. BioCapilar es libertad, belleza, y salud para nuestro cabello.
                </p>
              </div>
              <div class="image">
                <img src="/images/category/banner-capilar.jpg" alt="">
              </div>
            </div>
          </div>
          <section class="row">
            <% bioCapilar.forEach(({id,productImages,name,discount,property,price})=> { %>
              <article>
                <div class="card estilo-c">
                  <a href="/products/card/<%= id %> ">
                  <div class="img-container">
                    <img src="/images/products/<%= productImages[0].name%>" alt="imagen del producto">
                    <span class="promo">
                      <%= discount %>% off
                    </span>
                  </div>
                  <div class="info-container">
                    <div class="Card-info-texto">
                        <h2 class="name">
                          <%= name %>
                        </h2>
                        <span>
                          <%= property.name %>
                        </span>
                        <p>$
                          <% if (discount) { %>
                            <%= toThousand(price - (price * discount / 100)) %>
                              <% }else{ %>
                                <%= toThousand(price) %>
                                  <% } %>
                        </p>
                      </a>
                    </div>
                    <div class="card-c-iconos">
                      <div class="producto-iconos">
                        <% if (locals.userLogin) { %>
                          <% if (userLogin.category==="admin" ) { %>
                            <a href="/products/edit/<%= id %> " title="Editar producto"><i
                                class="fa-solid fa-pen"></i></a>
                            <% } %>
                              <% } %>
                                <a href="#"><i class="fa-solid fa-share-nodes" title="Compartir"></i></a>
                                <a href="#"><i class="fa-regular fa-heart" title="Favoritos"></i></a>
                                <% if (locals.userLogin) { %>
                                  <button title="Agregar producto al carrito" class="add_product_cart cart_button_<%= id %> icons__hover"
                                    value="<%= id %>" onclick="cart_action(`<%= id %>`)" style="cursor:pointer;">
                                    <i class="fa-solid fa-cart-shopping" style="position: relative;">
                                      <i class="fa-solid fa-slash cart_barra_<%= id %> cart_barra" >
                                      </i>
                                    </i>
                                  </button>
                                  <% }else{ %>
                                    <a title="Agregar producto al carrito" class="icons__hover" value="<%= id %>" href="/users/login">
                                      <i class="fa-solid fa-cart-shopping" style="position: relative;">
                                      </i>
                                    </a>
                                    <% } %>
                      </div>
                    </div>
              </article>
              <% }) %>
