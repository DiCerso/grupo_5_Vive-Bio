<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', { title : "Productos" }) %>

    <body class="productAll">
        <%- include('../partials/header') %>
            <main>
                <section class="main">
                    <section class="primer_contenedor">
                    <h2 class="titulares" id="BioCapilar">BioCapilar</h2>
                    <section class="row">
                        <% bioCapilar.forEach(({id,productImages,name,discount,property,price})=> { %>
                          <article>
                            <div class="card estilo-c">
                              <div class="img-container">
                                <img src="/images/products/<%= productImages[0].name%>" alt="imagen del producto">
                            <span class="promo">
                                  <%= discount %>% off
                                </span>
                              </div>
                              <div class="info-container">
                                <div class="Card-info-texto">
                                  <a href="/products/card/<%= id %> ">
                                    <h2><%= name %></h2>
                                  </a>
                                  <span> <%= property.name %> </span>
                                  <p>$
                                    <% if (discount) { %>
                                      <%= toThousand(price - (price * discount / 100)) %>
                                        <% }else{ %>
                                          <%= toThousand(price) %>
                                      <% } %>
                                  </p>
                                </div>
                                <div class="card-c-iconos">
                                  <div class="producto-iconos">
                                    <% if (locals.userLogin) { %>
                                      <% if (userLogin.category==="admin" ) { %>
                                        <a href="/products/edit/<%= id %> " title="Editar producto"><i
                                            class="fa-solid fa-pen"></i></a>
                                        <% } %>
                                          <% } %>
                                          <a href="/products/cart/<%= id %> " title="Agregar producto al carrito"><i
                                            class="fa-solid fa-cart-shopping"></i></a>                                <a href="#"><i class="fa-solid fa-share-nodes"></i></a>
                                            <a href="#"><i class="fa-regular fa-heart" title="Favoritos"></i></a>
                                  </div>
                                </div>
                              </div>
                            </div>
