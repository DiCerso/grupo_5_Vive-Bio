<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', { title : "Productos" }) %>

    <body class="productAll">
        <%- include('../partials/header') %>
            <main>
                <h2 class="titulares">Productos Recomendados</h2>
                <section class="row">
                <% products.forEach(({id,name,category,price,discount,property}) => { %>
                    <article>                    
                    <div class="card estilo-c">
                        <div class="img-container">
                            <img src="/images/jabon-humectante-14.jpg" alt="producto">
                            <span class="promo"><%= discount %>% off</span>
                        </div>
                        <div class="info-container">
                            <div class="Card-info-texto">
                                <a href="/products/Card/<%= id %> "><h2><%= name %> </h2></a>
                                <h4><%= category %> </h4>
                                <span>-<%= property %> -</span>
                                <h3>$<%= price %> .-</h3>
                                <span class="rating">‚≠ê‚≠ê‚≠ê‚≠ê</span>
                            </div>
                            <div class="card-c-iconos">
                                <div class="iconos-white">
                                    <a href="/products/Card/<%= id %> "><i class="fa-solid fa-eye"></i></a>
                                    <a href="/products/Edit/<%= id %> "><i class="fa-solid fa-pen"></i></a>
                                    <a href="#"><i class="fa-solid fa-share-nodes"></i></a>
                                    <a href="#"><i class="fa-solid fa-star"></i></a>
                                </div>
                                <a href="/productCarrito.html" class="add-cart">Quiero! üõí</a>
                            </div>
                        </div>
                    </div>
                </article>
                <% }) %>
                </section>
                <div class="banner">
                    <img src="/images/Banner03.png" alt="">
                </div>
            </main>

            <%- include('../partials/footer') %>
    </body>

</html>