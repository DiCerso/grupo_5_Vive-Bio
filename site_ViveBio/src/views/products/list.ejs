<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', { title : "List" }) %>

    <body class="home">
        <%- include('../partials/header') %>
            <main class="list">
                <div class="list__container__options">
                    <select class="list-select" id="select__list">
                        <option class="products__list" value="1" default>Productos</option>
                        <% if (userLogin.rol=="moderator" ) { %>
                            <option class="users__list" value="2">Usuarios</option>
                            <% } %>
                                <option class="categories__list" value="3">Categor√≠as</option>
                    </select>
                </div>

                <div class="list__container">
                    <div class="list__top">
                        <div class="list__cates">
                            <a href="/products/add" class="list__cate">Crear
                                Producto</a>
                        </div>
                        <div class="list_box_search">
                            <form class="list__busqueda" action="/products/list" method="GET">
                                <input type="text" name="keyboard" class="list__barra">
                                <button type="submit">Buscar</button>
                            </form>
                        </div>
                    </div>
                    <div class="list__headproducts">
                        <h3 class="list__id">Id</h3>
                        <h3 class="list__name">Nombre</h3>
                        <h3 class="list__price">Precio</h3>
                        <h3 class="list__options">Opciones</h3>
                    </div>
                    <section class="list__products"></section>
                </div>
            </main>
            <%- include('../partials/footer') %>
                <script src="/javascript/list.js"></script>
    </body>

</html>