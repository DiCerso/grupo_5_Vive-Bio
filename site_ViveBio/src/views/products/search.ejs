<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', { title : "Home" }) %>

    <body class="home">
        <%- include('../partials/header') %>
            <main>
                <div class="subtitulo__home">
                    <h1 style="font-size: 20px;">Resultados de : " <%= keyboard %> "</h1> 
                </div>
                <section class="sect1">
                    <% if (result.length > 0) { %>
                        <% result.forEach(({id, name, price, discount, productImages})=> { %>
                            <article class="art__home" style="margin: 0 10px 15px 10px;">
                                <div class="nombreart__home">
                                    <h1>
                                        <%= name %>
                                    </h1>
                                </div>
                                <div class="imgart__home">
                                    <% productImages.forEach(image => { %>
                                        <% if (image.primary) { %>
                                          <img src="/images/products/<%= image.name%>" alt="imagen del producto">
                                        <% } %>
                                      <% }) %>
                                </div>
                                <div class="precio">
                                    <h4>
                                        <%= price %> $
                                    </h4>
                                    <% if (discount) { %>
                                        <p>
                                            <%= price - (price * discount / 100) %> $
                                        </p>
                                        <% }else{ %>
                                            <p>
                                                <%= price %> $
                                            </p>
                                            <% } %>
                                </div>
                                <div class="verart__home">
                                    <a href="/Products/card/<%= id %>">Ver m√°s</a>
                                </div>
                            </article>
                            <% }) %>
                                <% }else{ %>
                                    <div>
                                        <h2> No se encontraron coincidencias üßê </h2>
                                    </div>
                                    <% } %>
            </main>
            <%- include('../partials/footer') %>
    </body>

</html>