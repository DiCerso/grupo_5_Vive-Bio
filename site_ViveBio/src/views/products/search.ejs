<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', { title : "Home" }) %>

    <body class="home">
        <%- include('../partials/header') %>
            <main>
                <div class="subtitulo__home">
                    <h1>Resultados para tu b√∫squeda</h1>
                </div>
                <section class="sect1">
                    <% if (result.length> 0) { %>
                        <% result.forEach(product=> { %>
                            <article class="art__home">
                                <div class="nombreart__home">
                                    <h1>
                                        <%= product.name %>
                                    </h1>
                                </div>
                                <div class="imgart__home">
                                    <img src="/images/<%= product.image %>" alt="">
                                </div>
                                <div class="precio">
                                    <h4>
                                        <%= product.price %> $
                                    </h4>
                                    <% if (product.discount) { %>
                                        <p>
                                            <%= product.price - (product.price * product.discount / 100) %> $
                                        </p>
                                        <% }else{ %>
                                            <p>
                                                <%= product.price %> $
                                            </p>
                                            <% } %>
                                </div>
                                <div class="verart__home">
                                    <a href="/Products/Card/<%= product.id %>">Ver mas</a>
                                </div>
                            </article>
                            <% }) %>
                                <% }else{ %>
                                    <div>
                                        <h2> No se encontraron coincidencias üßê </h2>
                                    </div>
                                    <% } %>
            </main>
            <%- include('../partials/footer') %>
                <script src="/javascript/menuMobile.js"></script>
                <script src="/javascript/navEmergent.js"></script>
    </body>

</html>