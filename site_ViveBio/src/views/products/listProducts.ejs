<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', { title : "Productos" }) %>

    <body class="productAll">
        <%- include('../partials/header') %>
            <main>
                <section class="main">
                        <% products.forEach(({id,name,price,discount,property,image})=> { %>
                            <article>
                                <div class="card estilo-c">
                                    <div class="img-container">
                                        <a href="/products/Card/<%= id %>">
                                            <img src="/images/<%= image %>" alt="producto">
                                        </a>
                                        <span class="promo">
                                            <%= discount %>% off
                                        </span>
                                    </div>
                                    <div class="info-container">
                                        <div class="Card-info-texto">
                                            <a href="/products/Card/<%= id %>">
                                                <h2>
                                                    <%= name %>
                                                </h2>
                                            </a>
                                            <h4>
                                                <%= category.name %>
                                            </h4>
                                            <h6 class="rating">⭐⭐⭐⭐</h6>
                                            <span>-<%= property %> -</span>
                                            <p>
                                                $ <% if (discount) { %>
                                                    <%= price - (price * discount / 100) %>
                                                        <% }else{ %>
                                                            <%= product.price %>
                                                                <% } %>
                                            </p>
                                        </div>
                                        <div class="card-c-iconos">
                                            <div class="iconos-white">
                                                <a href="/products/Card/<%= id %>"><i class="fa-solid fa-eye"></i></a>
                                                <a href="/products/Edit/<%= id %>"><i class="fa-solid fa-pen"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </article>
                            <% }) %>
                    </section>
            </main>

            <%- include('../partials/footer') %>
                <script src="/javascript/menuMobile.js"></script>
    </body>

</html>
