<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', { title : "Login" }) %>

    <body class="login">
        <div class="header_login">
            <a href="/"><img src="/images/logo.png" alt=""></a>
        </div>
        <div class="header_login_mobile">
            <%- include('../partials/header') %>
        </div>
        <main>
            <div class="login_general_container">
                <div class="login_container_video">
                    <section class="login_video">
                        <iframe width="300" height="200" src="https://www.youtube.com/embed/k5tsZzJsCuU"
                            title="YouTube video player" frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>
                    </section>
                </div>
                <div class="login_form-container">
                    <section class="login_container">
                        <div class="box_introduccion">
                            <div class="login_box_1">
                                <p style="text-shadow: 1px 1px 2px black;">Binvenido a </p>
                                <p style="color: var(--verdeFuerte);text-shadow: 1px 1px 2px black;">ViveBio</p>
                            </div>
                            <div class="login_box_2">
                                <p style="text-shadow: 1px 1px 2px black;">No tenés cuenta?</p>
                                <a href="/users/register"
                                    style="color: var(--verdeFuerte);text-shadow: 1px 1px 1px black;">Registrate!</a>
                            </div>
                        </div>
                        <h1>Login</h1>
                        <div class="login_box-gf">
                            <div class="login_google">
                                <button type="submit"><i class="fab fa-google-plus"></i></button>
                            </div>
                            <div class="login_facebook">
                                <button type="submit"><i class="fab fa-facebook"></i></button>
                            </div>
                        </div>
                        <form method="POST">
                            <article>
                                <div class="login_form-box">
                                    <label for="user">Usuario</label>
                                    <input class="login_form-input" type="user" id="user" name="user"
                                        placeholder="Ingresa usuario"
                                        value="<%= locals.old && old.user ? old.user : ''%>">
                                    <span class="errors">
                                        <%= locals.errors && errors.user ? errors.user.msg : null%>
                                    </span>
                                </div>
                                <div class="login_form-box">
                                    <label for="password">Contraseña</label>
                                    <input class="login_form-input" type="password" id="password" name="password"
                                        placeholder="Ingresa tu contraseña">
                                    <span class="errors">
                                        <%= locals.errors && errors.password ? errors.password.msg : null%>
                                    </span>
                                </div>
                            </article>
                            <div class="login_center">
                                <div class="register_terminos">
                                    <input class="" type="checkbox" name="recordar" id="recordar">
                                    <label for="recordar" style="font-size: 12px;">Recordar</label>
                                </div>
                                <div class="login_button">
                                    <button type="submit">Enviar</button>
                                </div>
                            </div>
                        </form>

                    </section>
        </main>
        <script src="/javascript/menuMobile.js"></script>
    </body>

</html>