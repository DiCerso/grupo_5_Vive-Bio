<header class="header">
    <div class="header_mobile-container" id="header_mobile">
        <div class="mobile_header">
            <div class="mobile_logo">
                <a href="/"><img src="/images/logo.png" alt="logo"></a>
            </div>
            <div class="nav_mobile_menu">
                <span id="btnMenu"><i class="fas fa-bars"></i></span>
            </div>
        </div>
        <div class="shadow_mobile" id="shadow"></div>
        <div class="options_mobile" id="menu">
            <% if (!locals.userLogin) { %>
                <div class="usuario_mobile">
                    <a href="/users/login"><i class="fas fa-user-circle"></i>Login</a>
                </div>
            <% } else{ %>
                <h3>Hola <%= userLogin.user %> </h3>
                <a href="/users/logout">Logout</a>
             <% } %>
              
            <ul class="menu">
                <li><a href="/">Home</a></li>
                <li><a href="/products/all">Productos</a></li>
                <li><a href="">Quienes somos</a></li>
                <li><a href="">Contacto</a></li>
            </ul>
        </div>
    </div>
    <div class="header__container">
        <div class="header__logo">
            <a href="/"><img src="/images/logo.png" alt="logo"></a>
        </div>
            <form class="header__busqueda" action="/Products/search" method="GET">
                <input type="text" name="keyboard" class="barra" style="padding-left:5px;">
                <button  type="submit"  class="barra__lupa"><i class="fas fa-search"></i></button>
            </form>
        <div class="header__user">
            <a href="/users/login">
                <img src="/images/Usuario.png" alt="Usuario" class="icon__user">
                <p>Usuario</p>
                <a class="user_control" href="/products/add">Agregar Producto</a>
            </a>
        </div>
    </div>
    <nav class="header__nav">
        <div class="header__localizacion">
            <a href="">Estas en "lugar"</a>
        </div>
        <div class="header__opciones">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/products/all">Productos</a></li>
                <li><a href="">Quienes somos</a></li>
                <li><a href="">Contacto</a></li>
            </ul>
        </div>
        <div class="header__iconos">
            <a href="#"><img src="/images/configuracion.png" alt=""></a>
            <a href="#"><img src="/images/campana.png" alt=""></a>
            <a href="/carrito"><img src="/images/carrito.png" alt=""></a>
            <a href="#"><img src="/images/corazon.png" alt=""></a>
        </div>
    </nav>



</header>